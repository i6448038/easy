<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            id="com.nec.lg.BootStrapPluginView"
            name="BootStrap">
      </category>
      <view
            allowMultiple="true"
            category="com.nec.lg.BootStrapPluginView"
            class="bootstrapplugin.views.BootStrapView"
            fastViewWidthRatio="0.06"
            icon="icons/bootStrapIcon.png"
            id="bootstrapplugin.views.BootStrapView"
            name="BootStrap"
            restorable="false">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               closeable="true"
               id="bootstrapplugin.views.BootStrapView"
               moveable="false"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.ProblemView"
               showTitle="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="bootstrapplugin.perspectives.BootStrapPerspective"
            fixed="false"
            icon="icons/bootStrapIcon.png"
            id="bootstrapplugin.perspectives.BootStrapPerspective"
            name="BootStrap">
         <description>
            BootStrap
         </description>
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="bootstrapplugin.editor.BootStrapEditor"
            default="false"
            extensions="html"
            icon="icons/bootStrapIconSmall.png"
            id="BootStrapPlugin.htmlEditor"
            name="Booteditor.EditorLauncherStrap">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="com.nec.lg.BootStrapPluginWizard"
            name="WebEditor">
      </category>
      <wizard
            category="com.nec.lg.BootStrapPluginWizard"
            class="bootstrapplugin.wizards.BSProjectCreate"
            finalPerspective="bootstrapplugin.perspectives.BootStrapPerspective"
            icon="icons/bootStrapIcon.png"
            id="bootstrapplugin.wizards.WebLayOutWizardPage"
            name="BootStrap"
            project="true">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.equinox.http.registry.servlets">
      <servlet
            alias="/hello"
            class="servlets.AbstractServer"
            load-on-startup="true">
      </servlet>
   </extension>
</plugin>
   
